                    a(href="/index/getinfo?fileid=" + o.id, target="_blank",class="mdc-ripple-surface demo-surface material-icons mdc-toolbar__icon", title="More Info")="info"
                    a(class="mdc-ripple-surface demo-surface material-icons mdc-toolbar__icon", onclick="removeVideo('#{o.id}')", title="Remove")="delete"
