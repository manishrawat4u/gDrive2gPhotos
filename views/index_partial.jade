div(class="mdc-layout-grid") 
    div(class="mdc-layout-grid__inner") 
      each o in files
        div(class="mdc-layout-grid__cell")
          //- div(class="mdc-card mdc-ripple-surface mdc-ripple-surface--primary mdc-theme--primary demo-surface mdc-elevation--z2")
          div(class="mdc-card")
            div
              section(class="mdc-card__media demo-card__16-9-media", style="background-image: url("+(o.thumbnailLink)+")")
                div(class="mdc-card__subtitle")= o.runTime
              section(class="mdc-card__primary")
                h3(class="mdc-card__title", title=o.name)=o.name
                form(method="post", action="/videos/upload")
                  img(src=o.iconLink, alt=o.mimeType)
                  input(type="hidden", name="fileid", value= o.id) 
                  a(href="/index/player/" + o.id, target="_blank",class="mdc-ripple-surface demo-surface material-icons mdc-toolbar__icon")="play_circle_filled"
                  a(href="/index/getinfo?fileid=" + o.id, target="_blank",class="mdc-ripple-surface demo-surface material-icons mdc-toolbar__icon")="info"
                  //- button(type="submit", value="Upload", class="mdc-ripple-surface demo-surface material-icons mdc-toolbar__icon")="cloud_upload"
                //-h2 class="mdc-card__subtitle">Subtitle here</h2>
    if nextPageToken
        button(onclick="loadMore(this)", class="mdc-button mdc-button--raised load-more-link", data-next-page-token=nextPageToken)="Load more..."
    