div(class="mdc-layout-grid") 
    div(class="mdc-layout-grid__inner") 
      each o in files
        div(class="mdc-layout-grid__cell", data-doc-id="#{o.id}")
          //- div(class="mdc-card mdc-ripple-surface mdc-ripple-surface--primary mdc-theme--primary demo-surface mdc-elevation--z2")
          div(class="mdc-card")
            div
              section(class="mdc-card__media demo-card__16-9-media", style="background-image: url("+(o.thumbnailLink)+")")
                div(class="mdc-card__subtitle")= o.runTime
                div=o.resolution
                div=o.size
              section(class="mdc-card__primary")
                h3(class="mdc-card__title", title=o.name)=o.name
                .mdc-card__actions.mdc-card__actions--full-bleed
                  //- .mdc-card__action-buttons
                  //-   a.mdc-button.mdc-card__action.mdc-card__action--button.mdc-ripple-upgraded Read
                  //-   a.mdc-button.mdc-card__action.mdc-card__action--button.mdc-ripple-upgraded Bookmark
                  .mdc-card__action-icons
                    //- button.mdc-icon-button.mdc-card__action.mdc-card__action--icon.mdc-ripple-upgraded.mdc-ripple-upgraded--unbounded(aria-pressed='false', aria-label='Add to favorites', title='Add to favorites', style='--mdc-ripple-fg-size:28px; --mdc-ripple-fg-scale:1.71429; --mdc-ripple-left:10px; --mdc-ripple-top:10px;')
                    //-   i.material-icons.mdc-icon-button__icon.mdc-icon-button__icon--on favorite
                    //-   i.material-icons.mdc-icon-button__icon favorite_border
                    //- button.mdc-icon-button.material-icons.mdc-card__action.mdc-card__action--icon.mdc-ripple-upgraded--unbounded.mdc-ripple-upgraded(title='Share', data-mdc-ripple-is-unbounded='true', style='--mdc-ripple-fg-size:28px; --mdc-ripple-fg-scale:1.71429; --mdc-ripple-left:10px; --mdc-ripple-top:10px;') share
