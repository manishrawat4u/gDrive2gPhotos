extends layout

block content
  h1= title
  p Welcome to #{title}
  table
    thead
      tr
        th= "Thumb"
        th= "File Name"
        th= "Transfer"
    tbody
      each o in files
        tr
          td
            img(src= o.thumbnailLink)
          td
            div
              span= o.name
              br
              span= o.size
          td
            a(href="/index/transfer/"+o.id) Transfer
              