extends layout

block header
    style.
        fieldset {
            padding-top: 0;
            padding-bottom: 16px;
            margin: 0;
            border: 0;
        }
        .actions{
            margin-top: 10px;
        }
block content
    div(class="mdc-toolbar-fixed-adjust")
    fieldset
        h6(class="mdc-typography--headline6")="Google drive file info"
        form(method="get")
            div(class="mdc-text-field mdc-text-field--fullwidth ") 
                input(type="text", class="mdc-text-field__input", name="fileid", placeholder="GD Link", aria-label="GD Link",autofocus) 
            div.actions
                input(type="submit", value="get info", class="mdc-button mdc-button--raised mdc-ripple-upgraded")       
            pre.json=JSON.stringify(fileInfo, null, 4)
        form(method="post", action="/videos/upload")
            input(type="hidden", name="fileid", value= fileInfo.id) 
            div.actions
            input(type="submit", value="Upload", class="mdc-button mdc-button--raised mdc-ripple-upgraded")             
        